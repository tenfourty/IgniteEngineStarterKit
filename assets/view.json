{
    "$view": {
        "attributes": {
            "_id": "weather",
            "statusBar.style": "light",
            "bg.color": "#000000"
        },
        "actions": [],
        "controls": [
                     {
                     "_id": "layoutMain",
                     "_type": "Layout",
                     "attributes": {
                     "size.w": "100%",
                     "size.h": "100%",
                     "visible": false,
                     "bg.color": "000000",
                     "layoutType": "float"
                     },
                     "controls": [
                     ]
                     }
                     ],
        "datasources": [
                        {
                        "_id": "dataLocation",
                        "_type": "HTTP",
                        "actions": [
                                    {
                                    "_type": "Modify",
                                    "attributes": {
                                    "_target": "layoutMain"
                                    },
                                    "set": {
                                    "visible": true
                                    },
                                    "on": "success"
                                    },
                                    {
                                    "_type": "Alert",
                                    "attributes": {
                                    "title": "dataLocation",
                                    "message": "success"
                                    },
                                    "on": "success"
                                    }
                                    ]
                        "attributes": {
                        "autoLoad.enabled": true,
                        "method": "GET",
                        "responseType": "json",
                        "url": "http://api.wunderground.com/api/161cf6c817d55c86/geolookup/q/[[$device.location]].json"
                        }
                        }
                        ]
    }
}