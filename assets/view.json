{
  "$view": {
    "attributes": {
      "_id": "weather",
      "statusBar.style": "light",
      "bg.color": "#000000"
    },
    "actions": [],
    "controls": [
      {
        "_id": "layoutMain",
        "_type": "Layout",
        "attributes": {
          "size.w": "100%",
          "size.h": "100%",
          "visible": false,
          "bg.color": "000000",
          "layoutType": "float"
        },
        "controls": [
                     {
                     "_id": "imageBackground",
                     "_type": "Image",
                     "attributes": {
                     "size.w": "100%",
                     "size.h": "100%",
                     "layoutType": "absolute",
                     "margin.left": 0,
                     "image": "/images/[[dataForecastCurrently.response.body.current_observation.icon]].jpg"
                     }
                     },
                     {
                     "_id": "textCityName",
                     "_type": "Text",
                     "attributes": {
                     "align.h": "right",
                     "align.v": "bottom",
                     "margin.bottom": 40,
                     "margin.right": 23,
                     "layoutType": "absolute",
                     "font": "HelveticaNeue-Light:24",
                     "text": "[[dataForecastCurrently.response.body.current_observation.display_location.city]]",
                     "color": "#ffffff"
                     }
                     },
                     {
                     "_id": "textCityConditions",
                     "_type": "Text",
                     "attributes": {
                     "align.h": "right",
                     "align.v": "bottom",
                     "margin": 23,
                     "layoutType": "absolute",
                     "font": "HelveticaNeue-Light:15",
                     "text": "[[dataForecastCurrently.response.body.current_observation.weather]]",
                     "text.align": "center",
                     "color": "#ffffff"
                     }
                     },
                     {
                     "_id": "textCityTemp",
                     "_type": "Text",
                     "attributes": {
                     "align.h": "left",
                     "align.v": "bottom",
                     "layoutType": "absolute",
                     "margin": 15,
                     "margin.bottom": 0,
                     "font": "HelveticaNeue-Thin:105",
                     "text": "{{parseInt([[dataForecastCurrently.response.body.current_observation.temp_f]])}}Â°",
                     "color": "#ffffff"
                     }
                     }
        ]
      }
    ],
    "datasources": [
                    {
                    "_id": "dataForecastCurrently",
                    "_type": "HTTP",
                    "actions": [
                                {
                                "_type": "Modify",
                                "attributes": {
                                "_target": "layoutMain"
                                },
                                "set": {
                                "visible": true
                                },
                                "on": "success"
                                }
                                ],
                    "attributes": {
                    "autoLoad.enabled": true,
                    "method": "GET",
                    "responseType": "json",
                    "url": "http://api.wunderground.com/api/161cf6c817d55c86/conditions/q/San%20Jose,%20Ca.json"
                    }
                    }
      ]
  }
}